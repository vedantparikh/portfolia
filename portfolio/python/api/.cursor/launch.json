{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "üöÄ FastAPI - Development Server",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8081",
                "--log-level",
                "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FASTAPI_DEBUG": "1"
            },
            "justMyCode": false,
            "presentation": {
                "hidden": false,
                "group": "FastAPI",
                "order": 1
            }
        },
        {
            "name": "üêõ FastAPI - Debug Mode",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8081",
                "--log-level",
                "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FASTAPI_DEBUG": "1"
            },
            "justMyCode": false,
            "stopOnEntry": false,
            "presentation": {
                "hidden": false,
                "group": "FastAPI",
                "order": 2
            }
        },
        {
            "name": "‚ö° FastAPI - Production Mode",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8081",
                "--workers",
                "4"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "presentation": {
                "hidden": false,
                "group": "FastAPI",
                "order": 3
            }
        },
        {
            "name": "üß™ FastAPI - Test Mode",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/tests"
            },
            "presentation": {
                "hidden": false,
                "group": "Testing",
                "order": 1
            }
        },
    ]
}