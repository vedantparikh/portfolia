{
    // Cursor-specific debugging configuration
    "debug.inlineValues": true,
    "debug.inlineValuesEnabled": "on",
    "debug.inlineValuesFontFamily": "monospace",
    "debug.inlineValuesFontSize": 12,
    // Editor behavior fixes
    "editor.backspace": "auto",
    "editor.delete": "auto",
    "editor.multiCursorModifier": "alt",
    "editor.wordWrap": "on",
    // Python debugging enhancements
    "python.debugging.console": "integratedTerminal",
    "python.debugging.consoleOptions": "integratedTerminal",
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    // Performance optimizations
    "debug.console.closeOnEnd": false,
    "debug.internalConsoleOptions": "openOnSessionStart",
    "debug.toolBarLocation": "docked",
    // Inline value display
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.showInlineBreakpointCandidates": true,
    "debug.allowBreakpointsEverywhere": true
}